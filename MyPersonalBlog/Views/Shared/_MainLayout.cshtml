@using MyPersonalBlog.Infrastructure

@{
    ViewBag.Title = "My personal blog";
}

<!DOCTYPE html>

<html>
@Html.Partial("_HeadPartial")
<body>
    <div class="container">
        <div class="jumbotron">
            <h2>My Personal Blog</h2>
            <p>in developing...</p>
            @Html.ActionLink("Панель администратора", "", "Manage/Admin")
        </div>

        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#user-menu">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="user-menu">
                    <ul class="nav navbar-nav">
                        <li class="@Html.IsActive("Posts", "Index")">@Html.ActionLink("Блог", "Index", "Posts")</li>
                        <li class="@Html.IsActive("Home", "About")">@Html.ActionLink("Обо мне", "About", "Home")</li>
                        <li class="@Html.IsActive("Home", "Contacts")">@Html.ActionLink("Контакты", "Contacts", "Home")</li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="row">
                <div class="col-sm-9">
                    @RenderBody()
                </div>

                <div class="col-sm-3">
                    @using (Html.BeginForm("", "Search", FormMethod.Get, new { role = "form", @class = "form-inline" }))
                    {
                        <div class="form-group">
                            <input type="text" class="form-control" id="query" name="query" placeholder="Поиск" />
                        </div>
                        <button type="submit" class="btn btn-default glyphicon glyphicon-search"></button>
                    }
                    <hr />
                    @Html.Action("SearchList", "Tags")
                </div>
            </div>

        <footer class="container-fluid text-center">
            <p>footer block</p>
        </footer>
    </div>

</body>
</html>