@model MyPersonalBlog.ViewModels.CommentLikesViewModel

@{
    AjaxOptions ajaxOpts = new AjaxOptions { UpdateTargetId = "like_" + Model.CommentId.ToString(), HttpMethod = "Post" };
}

@using (Ajax.BeginForm("SetLike", "Comment", null, ajaxOpts, new { role = "form" }))
{
    @Html.HiddenFor(m => m.CommentId);
    <span class="like text-info small"><button type="submit" class="btn btn-info btn-xs">Мне нравится: @Html.DisplayFor(m => m.LikesCount)</button></span>
}