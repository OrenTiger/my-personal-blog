@using MyPersonalBlog.Models
@using PagedList.Mvc;
@model  PagedList.IPagedList<Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Posts</h2>

@foreach (var post in Model)
{
    // TODO: добавить вывод тэгов к посту 
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="text-info">@post.Title</span>            
        </div>
        <div class="panel-body panel-info">
            <p>@post.IntroText</p>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-sm-6">
                    <span class="text-muted small">@post.CreateDate.ToString("dd/MM/yyyy hh:mm:ss")</span>
                </div>
                <div class="col-sm-6 text-right">
                    @Html.ActionLink("Подробнее...", "View", new { id = post.Id }, new { @class = "btn btn-link" })
                </div>
            </div>
        </div>
    </div>
}

<br />

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))