@using MyPersonalBlog.Infrastructure;

<!DOCTYPE html>

<html>
@Html.Partial("_HeadPartial")
<body>
    <div class="container">

        <header class="jumbotron">
            <h2><a href="@Url.Action("List", "Posts", new { area = "Admin" })">My Personal Blog</a></h2>
        </header>

        @if (User.Identity.IsAuthenticated)
        {
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#user-menu">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="user-menu">
                        <ul class="nav navbar-nav">
                            <li class="@Html.IsActive("List", "Posts")"><a href="@Url.Action("List", "Posts", new { area = "Admin" })"><span class="glyphicon glyphicon-list-alt"></span>Посты</a></li>
                            <li class="@Html.IsActive("List", "Comments")"><a href="@Url.Action("List", "Comments")"><span class="glyphicon glyphicon-comment"></span>Комментарии</a></li>
                            <li class="@Html.IsActive("List", "Tags")"><a href="@Url.Action("List", "Tags")"><span class="glyphicon glyphicon-tags"></span>Тэги</a></li>
                            <li class="@Html.IsActive("Index", "Settings")"><a href="@Url.Action("Index", "Settings")"><span class="glyphicon glyphicon-cog"></span>Настройки</a></li>
                            <li><a href="~/Manage/Elmah" target="_blank"><span class="glyphicon glyphicon-list-alt"></span>Лог</a></li>
                            <li><a href="@Url.Action("SignOut", "Login")"><span class="glyphicon glyphicon-log-out"></span>Выход</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        }

        @RenderBody()

        <footer class="container-fluid text-center">
            <p>footer block</p>
        </footer>
    </div>
</body>
</html>
