@model MyPersonalBlog.ViewModels.LoginViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3>Вход в панель администратора:</h3>
    </div>
    <div class="panel-body">
        <p class="lead">Введите учетные данные:</p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <div class="row">
                <div class="form-group col-sm-4">
                    <label>Логин:</label>
                    @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-4">
                    <label>Пароль:</label>
                    @Html.PasswordFor(m => m.PasswordHash, new { @class = "form-control" })
                </div>
            </div>
            <button type="submit" class="btn btn-default">Войти</button>
        }
    </div>
</div>